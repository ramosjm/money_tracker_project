<h1>All Merchants:</h1>

<% @merchants.each do |merchant| %>
  <p><a href="/merchants/<%=merchant.id%>/"><%= merchant.name().capitalize %></a> </p>
  <h3>Total Spent: Â£<%=sprintf("%.2f",merchant.total_transactions(merchant.transaction))%></h3>
