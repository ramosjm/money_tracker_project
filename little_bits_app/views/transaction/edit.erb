<form method="post" action="/transactions/<%=@transaction.id%>/edit/">
  <label for="merchant-name">Merchant:</label>
  <input type="text" name="amount" id="amount-field" value="<%= @transaction.amount%>"/>

  <label for="tag-field">Tag:</label>
  <input type="text" name="tag_type" id="tag-field" value="<%= @transaction.tag.tag_type%>"/>

  <input type='submit' value="Edit Transaction">
</form>
