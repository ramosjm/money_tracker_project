<h1>All Transactions:</h1>
<h3>Total Spent: £<%=@@total%></h3>
<% @@transactions.each do |transaction| %>
  <p>Transaction: <%=transaction.tag.tag_type.capitalize%> </p>
  <p><%= transaction.date_added[0..-11]%></p>
  <p><%= transaction.merchant.name.capitalize%> £<%=sprintf("%.2f",transaction.amount())%> </p>
  <p>
    <form method="get" action="/transactions/<%=transaction.id%>/edit">
      <input type="submit" value="Edit Transaction"/>
    </form>
    <form method="post" action="transactions/<%=transaction.id%>/delete">
      <input type="submit" value="Delete Transaction"/>
    </form>
  </p>
  <hr />
<% end %>
